    "hardhat": "^2.19.5",
    "hardhat-deploy": "^0.11.45"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1",
    "@openzeppelin/merkle-tree": "^1.0.6",
    "dotenv": "^16.4.4"
  }
